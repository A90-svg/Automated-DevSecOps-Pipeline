{
  "name": "app-and-pipeline",
  "version": "1.0.0",
  "description": "FinSecure Application with Automated DevSecOps Pipeline",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "set NODE_OPTIONS=--experimental-vm-modules && jest --detectOpenHandles --forceExit",
    "test:watch": "set NODE_OPTIONS=--experimental-vm-modules && jest --watch",
    "test:ci": "set NODE_OPTIONS=--experimental-vm-modules && jest --ci",
    "test:coverage": "set NODE_OPTIONS=--experimental-vm-modules && jest --coverage",
    "lint": "eslint . --ext .js --quiet",
    "lint:fix": "eslint . --ext .js --fix --quiet",
    "format": "prettier --write .",
    "security:audit": "npm audit --production",
    "security:check": "npm audit --production && npx snyk test"
  },
  "keywords": [
    "fintech",
    "devsecops",
    "pipeline",
    "demo app"
  ],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=22.20.0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "helmet": "^7.2.0",
    "joi": "^17.13.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.10",
    "@types/node": "^20.11.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3",
    "typescript": "^5.3.3"
  },
  "jest": {
    "testEnvironment": "node"
  }
}
